<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        [ %yellow(%d{dd-MM-yyyy HH:mm:ss.SSS}) | %highlight(%-5level) | %cyan(%logger{36}.%M) - %msg ]%n
      </pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
 
</configuration>